<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="0dp">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/gui"
            app:layout_constraintGuide_percent="0.08"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/gui"
            android:layout_width="match_parent"

            android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatButton
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/add_btn"
                    android:layout_marginRight="2dp"
                    app:layout_constraintRight_toLeftOf="@id/remove_btn"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:layout_constraintRight_toLeftOf="@id/replase_btn"
                    app:layout_constraintLeft_toRightOf="@id/add_btn"
                    android:id="@+id/remove_btn"
                    android:text="Remove"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    app:layout_constraintRight_toLeftOf="@id/hide_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/remove_btn"
                    android:id="@+id/replase_btn"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:text="Replace"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/replase_btn"
                    app:layout_constraintRight_toLeftOf="@id/show_btn"
                    android:id="@+id/hide_btn"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="Hide"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/hide_btn"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="2dp"
                    android:id="@+id/show_btn"
                    android:layout_marginLeft="2dp"
                    android:text="Show"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
             app:layout_constraintTop_toBottomOf="@id/gui"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>